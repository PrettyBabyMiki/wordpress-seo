  },
  "author": "Yoast",
  "license": "GPL-3.0",
  "private": false,
  "dependencies": {
    "@wordpress/a11y": "^1.0.7",
    "@wordpress/i18n": "^1.1.0",
    "@yoast/components": "^0.1.0-rc.6",
    "@yoast/helpers": "^0.1.0-rc.3",
    "@yoast/style-guide": "^0.1.0-rc.4",
    "algoliasearch": "^3.22.3",
