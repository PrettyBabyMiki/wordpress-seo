  "devDependencies": {
    "@babel/preset-env": "^7.3.4",
    "@babel/preset-react": "^7.0.0",
    "babel-jest": "^24.5.0",
    "babel-loader": "^7.1.1",
    "babel-plugin-styled-components": "^1.5.1",
    "babel-preset-react": "^6.24.1",
    "enzyme": "^3.3.0",
    "enzyme-to-json": "^3.3.3",
    "jest": "^24.5.0",
    "jest-styled-components": "^6.3.1",
    "react-test-renderer": "^16.8.4"
